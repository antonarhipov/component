<configuration>
    <branches>
        <branch>
            <pattern>.*</pattern>
            <versionFormat>${version.release}-${branch}-SNAPSHOT</versionFormat>
        </branch>
    </branches>
    <tags>
        <tag>
            <pattern>version/.*</pattern>
            <prefix>version/</prefix>
            <versionFormat>${tag}</versionFormat>
        </tag>
    </tags>
